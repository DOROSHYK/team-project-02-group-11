<article class="film-card ">
    <div class="img_thumb">
        <img src="https://image.tmdb.org/t/p/w500/{{poster_path}} " alt="poster {{title}}" />
    </div>
    <ul class="stats">
        <h3> {{title}} </h3>
        <li class="stats-item"> Vote / Votes 
            <span> 
                {{vote_average}} 
            </span>   
                <p> 
                     {{vote_count}}
                </p>
        </li>

        <li class="stats-item"> Popularity
                {{popularity}}
        </li> 

        <li class="stats-item"> Original Title
                {{original_title}}
        </li>

        <li class="stats-item"> Genre
                {{genres}}
        </li>

        <li class="stats-item"> About
            {{overview}}
        </li>
        
    </ul>
    <button class="add-to-watched">Add to watched</button>
    <button class="add-to-queue">Add to queue</button>
</article>